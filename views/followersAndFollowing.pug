extends layouts/main-layout.pug

block content
    if !profileUser
        span.errorMessage Перевірте на правильність URL, яким ви скористалися!
    else  
        script.
            var profileUserId = '!{profileUser._id}';
            var selectedTab = '!{selectedTab}';

        .tabsContainer
            +createTab("Підписанти", `/profile/${profileUser.username}/following`, selectedTab != "followers")
            +createTab("Підписники", `/profile/${profileUser.username}/followers`, selectedTab == "followers")

        .resultsContainer

block scripts
    script(src="/js/followersAndFollowing.js")